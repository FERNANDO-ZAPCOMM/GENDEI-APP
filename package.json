{
  "name": "gendei-monorepo",
  "version": "1.0.0",
  "description": "Gendei - WhatsApp Clinic Appointment Scheduling Platform",
  "author": "Gendei Team",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n functions,frontend -c blue,green \"npm run dev:functions\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=@gendei/frontend",
    "dev:functions": "npm run build:functions && firebase emulators:start --only functions",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=@gendei/frontend",
    "build:functions": "npm run build --workspace=@gendei/functions",
    "deploy:functions": "firebase deploy --only functions",
    "start:frontend": "npm run start --workspace=@gendei/frontend",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist apps/*/lib",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vercel": "^48.2.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
