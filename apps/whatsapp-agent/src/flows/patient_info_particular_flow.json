{
  "version": "6.2",
  "data_api_version": "3.0",
  "routing_model": {
    "ESPECIALIDADE": []
  },
  "screens": [
    {
      "id": "ESPECIALIDADE",
      "title": "Agendar Consulta",
      "terminal": true,
      "data": {
        "especialidades": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "title": { "type": "string" },
              "description": { "type": "string" }
            }
          },
          "__example__": [
            { "id": "prof_1", "title": "Cardiologia", "description": "Dr. Joao Silva" },
            { "id": "prof_2", "title": "Dermatologia", "description": "Dra. Maria Santos" }
          ]
        },
        "error_message": {
          "type": "string",
          "__example__": ""
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "form_especialidade",
            "children": [
              {
                "type": "RadioButtonsGroup",
                "name": "especialidade",
                "label": "Profissional",
                "required": true,
                "data-source": "${data.especialidades}"
              },
              {
                "type": "Footer",
                "label": "Continuar",
                "on-click-action": {
                  "name": "complete",
                  "payload": {
                    "especialidade": "${form.especialidade}",
                    "tipo_pagamento": "particular",
                    "convenio_nome": ""
                  }
                }
              }
            ]
          }
        ]
      }
    }
  ]
}
