# Gendei WhatsApp Agent - Claude Agent SDK
# Copy this to .env and fill in your values

# ===========================================
# ANTHROPIC CONFIGURATION
# ===========================================
ANTHROPIC_API_KEY=sk-ant-...

# ===========================================
# META/WHATSAPP CONFIGURATION
# ===========================================
META_BISU_ACCESS_TOKEN=your_meta_access_token
META_WEBHOOK_VERIFY_TOKEN=gendei_verify_token
META_API_VERSION=v24.0

# ===========================================
# GOOGLE CLOUD CONFIGURATION
# ===========================================
GOOGLE_CLOUD_PROJECT=gendei-prod
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ===========================================
# WHATSAPP FLOWS (Optional)
# ===========================================
CLINICA_MEDICA_FORMULARIO_FLOW_ID=
CLINICA_MEDICA_AGENDAMENTO_FLOW_ID=
FLOWS_PRIVATE_KEY_PATH=./flows_private_key.pem
FLOWS_PUBLIC_KEY_PATH=./flows_public_key.pem

# ===========================================
# APPLICATION SETTINGS
# ===========================================
GENDEI_DOMAIN=https://gendei.com
LOG_LEVEL=INFO
ENVIRONMENT=development
